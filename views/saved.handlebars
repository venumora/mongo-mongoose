<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12">
                {{#unless headlines.length}}
                <div class="card red lighten-2">
                    <div class="card-content white-text">There are no saved headlines. Go to  <a href="/">home</a> page and Save some headlines.</div>
                </div>
                {{/unless}} {{#each headlines}}
                <div class="card blue-grey darken-1 z-depth-5">
                    <div class="card-content white-text">
                        <span class="card-title">{{title}}</span>
                        <p>{{description}}</p>
                    </div>
                    <div class="card-action">
                        <a class="waves-effect waves-light btn modal-trigger" href="#{{_id}}">
                            <i class="material-icons right">speaker_notes</i>Add Notes ({{notes.length}})</a>
                        <div id="{{_id}}" class="modal">
                            <div class="modal-content">
                                <div class="row">
                                    <ul class="collection with-header">
                                        <li class="collection-header">
                                            <h4>Saved notes</h4>
                                        </li>
                                        {{#unless notes.length}}
                                        <li class="collection-item">There are no saved notes for this headline.</li>
                                        {{/unless}} {{#each notes}}
                                        <li class="collection-item">
                                            <div>{{note}}
                                                <a href="/api/deletenote/{{../_id}}/{{_id}}" class="secondary-content">
                                                    <i class="material-icons">delete</i>
                                                </a>
                                            </div>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>
                                <div class="row">
                                    <h6>Add new Note</h6>
                                    <form action="/api/savenote/{{_id}}" method="POST" class="col s12">
                                        <div class="row">
                                            <div class="input-field col s12">
                                                <textarea name="note" id="newnote" class="materialize-textarea"></textarea>
                                                <label for="textarea1">Textarea</label>
                                            </div>
                                        </div>
                                        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                                            <i class="material-icons right">send</i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <a href="#" class="waves-effect waves-light btn modal-close">Close</a>
                            </div>
                        </div>
                        <a class="waves-effect waves-light btn red" href="/api/unsaveheadline/{{_id}}">
                            <i class="material-icons left">delete</i>Unsave</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<script src="/assets/javascript/app.js"></script>