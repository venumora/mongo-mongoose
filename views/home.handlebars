<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <br>
        <br>
        <h1 class="header center orange-text">Mongo Headlines</h1>
        <div class="row center">
            <h5 class="header col s12 light">A modern way to read articles</h5>
        </div>
        <div class="row center">
            <a href="#" id="scrape-headlines" class="btn-large waves-effect waves-light orange">Scrape Headlines</a>
        </div>
        <br>
        <br>
    </div>
</div>
<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12">
                {{#unless headlines.length}}
                <div class="card red lighten-2">
                    <div class="card-content white-text">There are no saved headlines. Try Scrape Headlines!</div>
                </div>
                {{/unless}} {{#each headlines}}
                <div class="card blue-grey darken-1 z-depth-5">
                    <div class="card-content white-text">
                        <span class="card-title">{{title}}</span>
                        <p>{{description}}</p>
                    </div>
                    <div class="card-action">
                        <a target="_blank" class="waves-effect waves-light btn" href="{{link}}">
                            <i class="material-icons right">more</i>Read More</a>
                        {{#unless saved}}
                        <a class="waves-effect waves-light btn orange" href="/api/saveheadline/{{_id}}">
                            <i class="material-icons left">save</i>Read Later</a>
                        {{/unless}} {{#if saved}}
                        <a class="waves-effect waves-light btn orange" href="/saved" data-id="{{_id}}">
                            <i class="material-icons left">star</i>Saved</a>
                        {{/if}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<script src="/assets/javascript/app.js"></script>