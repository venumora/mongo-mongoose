<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <br>
        <br>
        <h1 class="header center orange-text">Mongo Headlines</h1>
        <div class="row center">
            <h5 class="header col s12 light">A modern way to read articles</h5>
        </div>
        <div class="row center">
            <a href="#" id="scrape-headlines" class="btn-large waves-effect waves-light orange">Scrape Headlines</a>
        </div>
        <br>
        <br>
    </div>
</div>
<div class="container">
    <div class="section">
        <div class="row">
            <div class="col">
                {{#each headlines}}
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{title}}</span>
                        <p>{{description}}</p>
                    </div>
                    <div class="card-action">
                        <a href="{{link}}">Read More...</a>
                        <a href="#">Read Later...</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<script src="/assets/javascript/app.js"></script>